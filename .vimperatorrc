"3.8.3 (created: 2014/11/09 13:19:01)

 let mapleader = ","

set runtimepath=/home/gchamoul/.vimperator
set editor="/usr/bin/gvim -f"
colorscheme default
set gui=addons,nobookmarks,nomenu,navigation,tabs
set focuscontent

" scroll three times as fast: I operate at warp speed
nnoremap j 3j
nnoremap k 3k
nnoremap h 3h
nnoremap l 3l

" make some shortcuts more like Vimium
nnoremap J gt
nnoremap K gT
nnoremap x :tabclose<cr>

" stay in insert mode
nnoremap I <S-Esc>

" show link destination in status line
set showstatuslinks=1

noremap <silent> <leader>l :set gui=addons,nobookmarks,nomenu,navigation,tabs<CR>
noremap <silent> <leader>k :set gui=addons,nobookmarks,nomenu,nonavigation,tabs<CR>
map T :tabopen!
map <A-y> :js<Space>util.copyToClipboard(content.document.title,<Space>true)<Return>
map <silent> <A-u> :js<Space>next_image()<Return>
map <silent> <A-d> :js<Space>previous_image()<Return>
map <silent> <A-p> :js<Space>print_page()<Return>

nnoremap <leader>t. :tabduplicate<cr>
nnoremap <leader>ta :tabattach<space>
nnoremap <leader>td :tabdetach<cr>
nnoremap <leader>tt :tabs<cr>
nnoremap <leader>tm :tabmove<space>
nnoremap <leader>t[ :tabmove -1<cr>
nnoremap <leader>t] :tabmove +1<cr>
nnoremap <leader>tg :tabgroups<space>
nnoremap <leader>tG :tabgroups<cr>

style! -name=tab chrome://* <<EOF
.tabbrowser-strip {
    background                         : #002b36 !important;
  }
EOF
source! .vimperatorrc.local

" vim: set ft=vimperator:
