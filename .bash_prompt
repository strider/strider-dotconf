#!/bin/bash
# The various escape codes that we can use to color our prompt.
         RED="\[\033[0;31m\]"
      YELLOW="\[\033[1;33m\]"
LIGHT_YELLOW="\[\033[0;33m\]"
       GREEN="\[\033[0;32m\]"
  LIGHT_CYAN="\[\033[0;36m\]"
        CYAN="\[\033[1;36m\]"
  LIGHT_BLUE="\[\033[0;34m\]"
        BLUE="\[\033[1;34m\]"
   LIGHT_RED="\[\033[0;31m\]"
 LIGHT_GREEN="\[\033[1;32m\]"
       WHITE="\[\033[1;37m\]"
      PURPLE="\[\033[1;35m\]"
LIGHT_PURPLE="\[\033[0;35m\]"
  LIGHT_GRAY="\[\033[0;37m\]"
  COLOR_NONE="\[\e[0m\]"

export GIT_PS1_SHOWDIRTYSTATE=true
PS1="${GREEN}\u@\h${COLOR_NONE} ${BLUE}\W${COLOR_NONE} ${LIGHT_YELLOW}$(__git_ps1 "[%s]")${COLOR_NONE} \`if [ \$? = 0 ]; then echo -e '${GREEN}:)'; else echo -e '${RED}:('; fi\` ${BLUE}\$${COLOR_NONE} "
